<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VolunteerDonateOrReceive">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/intro_background">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/volunteerDonateOrReceiveVG"
            android:layout_centerInParent="true"
            android:background="@drawable/profile_background"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/whatToDo"
                android:text="What do u want to do?"
                android:textStyle="bold"
                android:fontFamily="@font/tenaliramakrishna_regular"
                android:textSize="20sp"
                android:textColor="#718355"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/DonateBtn"
                android:text=" Donate "
                android:textStyle="bold"
                android:fontFamily="@font/tenaliramakrishna_regular"
                android:textColor="#ffffff"
                android:textSize="35sp"
                android:background="@drawable/selected_background"
                android:layout_below="@+id/whatToDo"
                android:layout_marginTop="15dp"
                android:elevation="10dp"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ReceiveBtn"
                android:text=" Receive "
                android:textStyle="bold"
                android:fontFamily="@font/tenaliramakrishna_regular"
                android:textColor="#ffffff"
                android:textSize="35sp"
                android:background="@drawable/selected_background"
                android:layout_below="@+id/DonateBtn"
                android:layout_marginTop="18dp"
                android:elevation="10dp"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>